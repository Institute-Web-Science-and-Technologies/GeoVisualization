<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/createGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="createGame"
        android:text="Create" />

    <ListView
        android:id="@+id/gameListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createGameButton"
        android:layout_alignParentLeft="true" >
    </ListView>

    <Spinner
        android:id="@+id/gameModeSpinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/createGameButton"
        android:layout_toRightOf="@+id/createGameButton" 
        android:entries="@array/game_modes"
        android:prompt="@string/game_mode_prompt"/>

</RelativeLayout>
